{
    "parser": "babel-eslint",
    "extends": [
         "eslint:recommended",
         "plugin:react/recommended"
    ],
    "plugins": [
       "react"
    ],
    "globals": {
        "Promise": true,
        "describe": true,
        "it": true,
        "React": true
    },
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
      }
    },
    "rules": {
      "react/display-name": 0,
      "react/prop-types": 0,
      "no-restricted-imports": ["error", "stardust"],
      "indent": [
        "error",
        2,
        { "SwitchCase": 1 }
      ],
      "quotes": [
        2,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-trailing-spaces": 2,
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "react/jsx-uses-vars": 1
    },
    "env": {
      "browser": true,
      "node": true
    }
}
